<Window x:Class="AIInterviewAssistant.WPF.UI.OverlayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AIInterviewAssistant.WPF.UI"
        mc:Ignorable="d"
        Title="Solution Overlay" 
        Height="Auto" Width="Auto" 
        SizeToContent="WidthAndHeight"
        WindowStyle="None" 
        AllowsTransparency="True" 
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        ResizeMode="NoResize">
    
    <Border x:Name="MainBorder" 
            Background="#80000000" 
            CornerRadius="5" 
            Padding="10"
            MaxWidth="500">
        <StackPanel>
            <!-- Header with provider info and close button -->
            <Grid Margin="0,0,0,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock x:Name="ProviderLabel" 
                           Text="GigaChat Solution" 
                           Foreground="#FF00FF00" 
                           FontWeight="Bold"/>
                
                <Button Grid.Column="1" 
                        Content="✕" 
                        Background="Transparent" 
                        BorderThickness="0" 
                        Foreground="#FF00FF00"
                        Click="CloseButton_Click"
                        Width="20" Height="20"
                        Padding="0"
                        VerticalAlignment="Top"/>
            </Grid>
            
            <!-- Solution content -->
            <TextBox x:Name="ContentTextBox" 
                     Background="Transparent" 
                     Foreground="#FF00FF00" 
                     BorderThickness="0"
                     FontFamily="Consolas"
                     TextWrapping="Wrap"
                     IsReadOnly="True"
                     FontSize="12"
                     MaxHeight="600"
                     VerticalScrollBarVisibility="Auto"
                     Text="// Solution code will appear here"/>
            
            <!-- Footer with action buttons -->
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Right" 
                        Margin="0,5,0,0">
                <Button x:Name="CopyButton" 
                        Content="Copy" 
                        Click="CopyButton_Click"
                        Background="Transparent" 
                        Foreground="#FF00FF00"
                        BorderBrush="#FF00FF00"
                        BorderThickness="1"
                        Padding="5,2"
                        Margin="0,0,5,0"/>
                
                <Button x:Name="ExplanationButton" 
                        Content="Show Explanation" 
                        Click="ExplanationButton_Click"
                        Background="Transparent" 
                        Foreground="#FF00FF00"
                        BorderBrush="#FF00FF00"
                        BorderThickness="1"
                        Padding="5,2"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
