<Window x:Class="AIInterviewAssistant.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AIInterviewAssistant.WPF"
        mc:Ignorable="d"
        Title="AI Interview Assistant" Height="800" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Content="Position" Margin="10,10,10,0"/>
        <TextBox Grid.Row="1" x:Name="PositionTextBox" Margin="10,0,10,10"/>

        <Label Grid.Row="2" Content="ModelPath" Margin="10,10,10,0"/>
        <TextBox Grid.Row="3" x:Name="ModelPathTextBox" Margin="10,0,10,10"/>

        <Button Grid.Row="4" Content="Load" x:Name="LoadButton" Margin="10" Click="LoadButton_Click"/>

        <Grid Grid.Row="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" Content="Input" Margin="10,10,5,0"/>
            <Button Grid.Column="2" Content="Send manually" x:Name="SendManuallyButton" Margin="0,10,10,0" Click="SendManuallyButton_Click"/>
        </Grid>

        <TextBox Grid.Row="6" x:Name="InputTextBox" Height="150" Margin="10,0,10,10" TextWrapping="Wrap" AcceptsReturn="True"/>

        <Label Grid.Row="7" Content="Output" Margin="10,10,10,0"/>
        <TextBox Grid.Row="8" x:Name="OutputTextBox" Margin="10,0,10,10" TextWrapping="Wrap" AcceptsReturn="True" IsReadOnly="True"/>

        <Grid Grid.Row="9">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" Content="Status:" Margin="10,5,5,10"/>
            <Label Grid.Column="1" x:Name="StatusLabel" Content="" Margin="0,5,10,10"/>
        </Grid>
    </Grid>
</Window>