<Window x:Class="AIInterviewAssistant.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AIInterviewAssistant.WPF"
        mc:Ignorable="d"
        Title="AI Interview Assistant" Height="600" Width="500"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок и настройки -->
        <Grid Grid.Row="0" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock Text="AI Interview Assistant" 
                       FontSize="20" 
                       FontWeight="Bold"
                       VerticalAlignment="Center"/>
            
            <Button Grid.Column="1" 
                    Content="Settings" 
                    Padding="10,5"
                    Click="SettingsButton_Click"/>
        </Grid>
        
        <!-- Панель настройки -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock Grid.Row="0" Grid.Column="0" 
                       Text="GigaChat Auth:"
                       VerticalAlignment="Center"
                       Margin="0,0,10,0"/>
            
            <Button Grid.Row="0" Grid.Column="1" 
                    x:Name="AuthButton"
                    Content="Authenticate GigaChat"
                    Click="AuthButton_Click"
                    Padding="10,5"
                    Margin="0,5"/>
            
            <TextBlock Grid.Row="1" Grid.Column="0" 
                       Text="Status:"
                       VerticalAlignment="Center"
                       Margin="0,0,10,0"/>
            
            <TextBlock Grid.Row="1" Grid.Column="1" 
                       x:Name="StatusTextBlock"
                       Text="Not ready"
                       VerticalAlignment="Center"/>
        </Grid>
        
        <!-- Разделитель -->
        <Separator Grid.Row="2" Margin="10,0"/>
        
        <!-- Основное содержимое -->
        <TabControl Grid.Row="3" Margin="10">
            <TabItem Header="Manual Solution">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" 
                               Text="Problem Description:" 
                               Margin="0,5"/>
                    
                    <TextBox Grid.Row="1" 
                             x:Name="ProblemTextBox" 
                             TextWrapping="Wrap" 
                             AcceptsReturn="True"
                             Margin="0,0,0,10"
                             VerticalScrollBarVisibility="Auto"/>
                    
                    <CheckBox Grid.Row="2" 
                              x:Name="WithExplanationCheckBox" 
                              Content="Include explanation"
                              Margin="0,0,0,10"
                              IsChecked="True"/>
                    
                    <Button Grid.Row="3" 
                            x:Name="SolveButton" 
                            Content="Solve Problem"
                            Click="SolveButton_Click"
                            Padding="10,5"
                            HorizontalAlignment="Right"/>
                </Grid>
            </TabItem>
            
            <TabItem Header="Screenshot Tool">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" 
                               Text="Press PrintScreen to capture screen or click button below:" 
                               TextWrapping="Wrap"
                               Margin="0,5"/>
                    
                    <Border Grid.Row="1" 
                            BorderBrush="LightGray" 
                            BorderThickness="1" 
                            Margin="0,5">
                        <Image x:Name="ScreenshotImage" 
                               Stretch="Uniform"/>
                    </Border>
                    
                    <TextBox Grid.Row="2" 
                             x:Name="ExtractedTextBox" 
                             Text="Extracted text will appear here..."
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             IsReadOnly="True"
                             Height="100"
                             Margin="0,5"
                             VerticalScrollBarVisibility="Auto"/>
                    
                    <StackPanel Grid.Row="3" 
                                Orientation="Horizontal" 
                                HorizontalAlignment="Right">
                        <Button x:Name="CaptureButton" 
                                Content="Capture Screen"
                                Click="CaptureButton_Click"
                                Padding="10,5"
                                Margin="0,0,10,0"/>
                        
                        <Button x:Name="SolveCapturedButton" 
                                Content="Solve Captured Problem"
                                Click="SolveCapturedButton_Click"
                                Padding="10,5"/>
                    </StackPanel>
                </Grid>
            </TabItem>
            
            <TabItem Header="Hotkeys">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" 
                               Text="Configure hotkeys:" 
                               Margin="0,5"/>
                    
                    <ListView Grid.Row="1" 
                              x:Name="HotkeysListView"
                              Margin="0,5">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Action" 
                                                DisplayMemberBinding="{Binding Action}" 
                                                Width="200"/>
                                <GridViewColumn Header="Shortcut" 
                                                DisplayMemberBinding="{Binding Shortcut}" 
                                                Width="200"/>
                            </GridView>
                        </ListView.View>
                        <ListView.ItemContainerStyle>
                            <Style TargetType="{x:Type ListViewItem}">
                                <EventSetter Event="MouseDoubleClick" Handler="HotkeyItem_DoubleClick"/>
                            </Style>
                        </ListView.ItemContainerStyle>
                    </ListView>
                </Grid>
            </TabItem>
            
            <!-- New Voice Recognition Tab -->
            <TabItem Header="Voice Recognition">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" 
                               Text="Record your voice to transcribe the problem:" 
                               TextWrapping="Wrap"
                               Margin="0,5"/>
                    
                    <Grid Grid.Row="1" Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <ProgressBar x:Name="RecordingProgressBar" 
                                     Height="20" 
                                     Margin="0,0,10,0"/>
                        
                        <TextBlock x:Name="RecordingTimeText" 
                                   Grid.Column="0"
                                   Text="00:00" 
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Foreground="Black"/>
                        
                        <Button x:Name="RecordButton" 
                                Grid.Column="1"
                                Content="Start Recording" 
                                Padding="10,5"
                                Click="RecordButton_Click"/>
                    </Grid>
                    
                    <TextBox Grid.Row="2" 
                             x:Name="TranscribedTextBox" 
                             Text="Transcribed text will appear here..."
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             Margin="0,5"
                             VerticalScrollBarVisibility="Auto"/>
                    
                    <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
                        <CheckBox x:Name="VoiceWithExplanationCheckBox" 
                                  Content="Include explanation"
                                  Margin="0,0,10,0"
                                  VerticalAlignment="Center"
                                  IsChecked="True"/>
                        
                        <Button Grid.Row="3" 
                                x:Name="SolveVoiceButton" 
                                Content="Solve Problem"
                                Click="SolveVoiceButton_Click"
                                Padding="10,5"
                                Margin="0,5"/>
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>
        
        <!-- Статус бар -->
        <StatusBar Grid.Row="4">
            <StatusBarItem>
                <TextBlock x:Name="StatusBarText" Text="Ready"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>